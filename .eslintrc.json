{
    "extends": "next/core-web-vitals",
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "@stylistic/eslint-plugin",
        "@stylistic/eslint-plugin-jsx"
    ],
    "rules": {
        "@stylistic/semi": [
            "warn",
            "always"
        ],
        "@stylistic/indent": [
            "warn",
            4
        ],
        "@stylistic/quotes": [
            "warn",
            "double"
        ],
        "@stylistic/jsx-quotes": [
            "warn",
            "prefer-double"
        ]
    }
}